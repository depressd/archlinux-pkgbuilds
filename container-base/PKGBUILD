pkgname=container-base
pkgver=2
pkgrel=4
pkgdesc="meta-package with base system for container machine."
arch=(any)

depends=(
	bash
	bzip2
	coreutils
	diffutils
	file
	filesystem
	findutils
	gawk
	gcc-libs
	gettext
	glibc
	grep
	gzip
	iproute2
	iputils
	less
	licenses
	logrotate
	man-db
	man-pages
	nano
	pacman
	perl
	procps-ng
	psmisc
	sed
	shadow
	sysfsutils
	systemd-sysvcompat
	tar
	texinfo
	util-linux
	which
)

provides=()
conflicts=()
replaces=()

install=container-base.install


package() {
	cd "$pkgdir"

	mkdir -p etc/systemd/network
	cat >etc/systemd/network/veth.network <<EOF
[Match]
Name=host* ve-*
Virtualization=systemd-nspawn

[Network]
DHCP=yes
EOF

}
