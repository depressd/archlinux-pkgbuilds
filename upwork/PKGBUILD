_p=upwork

pkgname=${_p}
pkgver=4.0.144.0
pkgrel=1
pkgdesc="Upwork Team App."
arch=(x86_64)
url="https://www.upwork.com/downloads/new-team-application"
license=(unknown)
groups=()
depends=(gtk2 gtkglext libgcrypt15 libxss libxtst glu gconf alsa-lib)
makedepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=(!emptydirs)
install=
source=("http://updates.team.odesk.com/binaries/v4_0_144_0_mj9j7zmoj9asg5f0/upwork_amd64.deb")
sha256sums=(45b785f6697a12ce3bbaab166d20cb80f9c9ec120b0af945cfa22330cfcaf19e)

prepare() {
	cd "${srcdir}"
	tar -zxf "${srcdir}/data.tar.gz"
}

package() {
	cd "${srcdir}"
	cp -rp usr "${pkgdir}/usr"
	ln -s /usr/lib/libudev.so "${pkgdir}/usr/share/upwork/libudev.so.0"
}
