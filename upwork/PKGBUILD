_p=upwork

pkgname=${_p}
pkgver=4.1.347.0
pkgrel=1
pkgdesc="Upwork Team App."
arch=(x86_64)
url="https://www.upwork.com/downloads/new-team-application"
license=(unknown)
groups=()
depends=(gtk2 gtkglext libgcrypt15 libxss libxtst glu gconf alsa-lib)
makedepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=(!emptydirs)
install=
source=("http://updates.team.odesk.com/binaries/v4_1_347_0_rjk4flov9nu4se21/upwork_amd64.deb")
sha256sums=(cc6903f940678d69e60d73d097d79c6acde9fb4beacef2d24576c91360e84e7e)

prepare() {
	cd "${srcdir}"
	tar -zxf "${srcdir}/data.tar.gz"
}

package() {
	cd "${srcdir}"
	cp -rp usr "${pkgdir}/usr"
	ln -s /usr/lib/libudev.so "${pkgdir}/usr/share/upwork/libudev.so.0"
}
