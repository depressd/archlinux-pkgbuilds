_p=upwork

pkgname=${_p}
pkgver=4.1.351.0
pkgrel=1
pkgdesc="Upwork Team App."
arch=(x86_64)
url="https://www.upwork.com/downloads/new-team-application"
license=(unknown)
groups=()
depends=(gtk2 gtkglext libgcrypt15 libxss libxtst glu gconf alsa-lib)
makedepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=(!emptydirs)
install=
source=("https://updates-desktopapp.upwork.com/binaries/v4_1_351_0_a7qf2qa9wn508n52/upwork_amd64.deb")
sha256sums=(557fc0152f6b7c75d28a2c0fa624b475ffb72af5404616e5b9f270fa41aacb78)

prepare() {
	cd "${srcdir}"
	tar -zxf "${srcdir}/data.tar.gz"
}

package() {
	cd "${srcdir}"
	cp -rp usr "${pkgdir}/usr"
	ln -s /usr/lib/libudev.so "${pkgdir}/usr/share/upwork/libudev.so.0"
}
